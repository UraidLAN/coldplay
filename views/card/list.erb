<table>
  <tr>
    <th>ID</th>
    <th>user</th>
    <th>enabled?</th>
    <th>sound file</th>
    <th>description</th>
  </tr>
  <% @cards.each do |card| %>
  <tr>
    <td><%= card[:card_id] %></td>
    <td><%= card[:username] %></td>
    <td><% if card[:enabled] %>True<% else %>False<% end %></td>
    <td><% if card[:soundfile].nil? %>None<% else %><%= card[:soundfile] %><% end %></td>
    <td><%= card[:description] %></td>
  </tr>
  <% end %>
</table>